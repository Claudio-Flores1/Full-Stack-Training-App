{% layout 'layout.liquid' %}
{% block content %}
<div class="container-sm">
    <form action="/products" method="POST">
        <fieldset>
            <legend>Create New Example</legend>
            <label class="form-label">Title: </label>
            <input 
                type="text" 
                name="title" 
                placeholder="{{ product.title }}"
                value="{{ product.title }}"
                class="form-control"
            >
            <label class="form-label">Body:</label>
            <input 
                type="text" 
                name="body" 
                placeholder="{{ product.body }}" 
                value="{{ product.body }}" 
                class="form-control"
            >
            <label class="form-label">Family:</label>
            <input 
                type="text" 
                name="family"
                value="{{ product.family }}"
                class="form-control"
            >
              <label class="form-label">Updated:</label>
            <input 
               type="checkbox" 
                name="updated" 
                class="form-check-input"
                {% if product.updated %}
                    checked
                {% endif %}
            >
            <label class="form-label">Waterproof:</label>
            <input 
                type="checkbox" 
                name="waterproof" 
                class="form-check-input"
                {% if product.waterProof %}
                    checked
                {% endif %}
            >
        </fieldset>
        <input type="submit" value="Edit Example" class="btn btn-success">
    </form>
</div>
{% endblock %}